<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns = "1"
    tools:context=".MainActivity">

    <!--stretchColumns = "value" -> value의 column의 길이를 늘리기 위해 사용함
    ex) stretchColumns = "1" -> column 1 전부가 늘어남-->
    <TableRow>
        <TextView
            android:id = "@+id/oneOne"
            android:gravity = "center"
            android:text = "(1,1)"

            />
        <!--layout_span = "value" -> 특정 row의 column이 value만큼 차지함
        ex) 위 코드에 layout_span ="2"라면 (0,0)이 2개의 column만큼 차지 -->
        <TextView
            android:id = "@+id/oneTwo"
            android:gravity = "center"
            android:text = "(1,2)"
            />
        <TextView
            android:id = "@+id/oneThree"
            android:gravity = "center"
            android:text = "(1,3)"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id = "@+id/twoOne"
            android:gravity = "center"
            android:text = "(2,1)"
            />
        <TextView
            android:id = "@+id/twoTwo"
            android:gravity = "center"
            android:text = "(2,2)"
            />
        <TextView
            android:id = "@+id/twoThree"
            android:gravity = "center"
            android:text = "(2,3)"
            />
    </TableRow>

</TableLayout>